<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: linear-gradient(to bottom right, #9575CD, #4FC3F7, #66BB6A);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Background Panel with Glow Effect -->
        <VBox alignment="CENTER" layoutX="231.5" layoutY="210.0" prefHeight="425.0" prefWidth="561.0" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 25;">
            <effect>
                <Glow level="0.3" />
            </effect>
        </VBox>

        <!-- Header Text for Login Page with DropShadow Effect -->
        <Text layoutX="398.0" layoutY="119.0" style="-fx-font-size: 70; -fx-font-family: 'Satisfy'; -fx-fill: linear-gradient(to bottom, #1F4A67, #0D2744); -fx-stroke: #000000; -fx-stroke-width: 1.5;" text="Sign In">
            <effect>
                <DropShadow color="rgba(0, 0, 0, 0.7)" offsetX="4" offsetY="4" radius="15" />
            </effect>
        </Text>

        <!-- VBox for Centered Login Form with Shadow Effect -->
        <VBox alignment="CENTER" layoutX="312.0" layoutY="250.0" prefWidth="400.0" spacing="25.0">
            <children>
                <!-- Username Field with 3D Effect -->
                <TextField fx:id="usernameField" promptText="Enter your CUET mail address" style="-fx-font-size: 20; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <!-- Password Field with 3D Effect -->
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 20; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <!-- Login Button with 3D and Gradient Effect -->
                <Button style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #2E7D32); -fx-text-fill: #FFFFFF; -fx-font-family: 'Limelight'; -fx-font-weight: bold; -fx-font-size: 24; -fx-background-radius: 15; -fx-padding: 10 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 8, 0, 3, 3);" text="Sign In" />

                <!-- Forgot Password Link with Hover Effect -->
                <Text fx:id="forgotPasswordText" style="-fx-font-size: 16; -fx-fill: #1A237E; -fx-underline: true;" text="Forgot Password?" />

                <!-- "Don't have an account? Sign Up" Text with Hover Effect -->
                <Text fx:id="signUpText" style="-fx-font-size: 16; -fx-fill: #1A237E; -fx-underline: true;" text="Don't have an account? Sign Up" />
            </children>
        </VBox>
    </children>
</AnchorPane>
