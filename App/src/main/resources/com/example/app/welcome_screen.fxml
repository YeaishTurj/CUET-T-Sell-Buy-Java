<AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: linear-gradient(to bottom right, #9575CD, #4FC3F7, #66BB6A);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.WelcomeScreenController"> <!-- Add this line -->
   <children>
      <!-- Background region for content below the header with semi-transparent gradient -->
      <Region fx:id="reg1" prefHeight="769.0" prefWidth="1024.0" style="-fx-background-color: linear-gradient(to top, rgba(255,255,255,0.8), rgba(150,200,255,0.6)); " />

      <!-- T-shirt Image centered above the platform name -->
      <ImageView fitHeight="172.0" fitWidth="152.0" layoutX="283.0" layoutY="122.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../assets/tshirt_logo.png" />
         </image>
      </ImageView>

      <!-- Platform name text with drop shadow effect -->
      <Text layoutX="429.0" layoutY="227.0" style="-fx-font-size: 60; -fx-font-family: 'Montagu Slab'; -fx-fill: #1F4A67; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 5, 0, 0, 2);" text="Cuet T-Sell &amp; Buy" />

      <!-- Subtitle text with increased letter spacing -->
      <Text fx:id="slogan" layoutX="517.0" layoutY="292.0" style="-fx-font-size: 30; -fx-font-style: italic; -fx-font-family: 'Agdasima'; -fx-fill: #6D6D6D; -fx-letter-spacing: 5px;" text="A T-shirt buying and selling platform for CUET" underline="true" />

      <!-- Welcome text with gradient effect and bold font -->
      <Text layoutX="36.0" layoutY="96.0" style="-fx-font-size: 80; -fx-font-family: 'Limelight'; -fx-fill: #1A3A60; -fx-font-weight: bold;" text="Welcome To," textAlignment="JUSTIFY">
         <font>
            <Font size="76.0" />
         </font>
         <effect>
            <DropShadow color="rgba(0, 0, 0, 0.7)" offsetX="0" offsetY="2" radius="10" />
            <Glow level="0.8" />
         </effect>
      </Text>

      <HBox alignment="CENTER" layoutY="345.0" prefHeight="212.5" prefWidth="1024.0">
         <children>
            <!-- "Continue As" text with bold effect and glow -->
            <Text style="-fx-font-size: 60; -fx-font-family: 'Satisfy'; -fx-fill: #1A237E; -fx-stroke: #1A237E; -fx-stroke-width: 1;" text="Continue As">
               <effect>
                  <Glow level="0.75" />
               </effect>
            </Text>
         </children>
      </HBox>

      <HBox alignment="TOP_CENTER" layoutY="542.0" prefHeight="227.0" prefWidth="1024.0">
         <children>
            <!-- "OR" text with stroke for bold effect and glow -->
            <Text style="-fx-font-size: 30; -fx-font-family: 'Satisfy'; -fx-fill: #D32F2F; -fx-stroke: #000000; -fx-stroke-width: 1;" text="OR">
               <effect>
                  <Glow level="0.5" />
               </effect>
            </Text>
         </children>
      </HBox>

                  <VBox alignment="CENTER" layoutX="512.0" layoutY="343.0" prefHeight="425.0" prefWidth="512.0">
         <children>
            <!-- Seller Button with enhanced gradient and hover effect -->
            <Button fx:id="sellerButton" mnemonicParsing="false" onAction="#onClickSellerButton" style="-fx-background-color: linear-gradient(to bottom, #3F51B5, #303F9F); -fx-text-fill: #FFFFFF; -fx-font-family: 'Limelight'; -fx-font-weight: bold; -fx-font-size: 24; -fx-padding: 15 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 0, 2);" text="Seller" />
         </children>
      </VBox>

      <VBox alignment="CENTER" layoutY="343.0" prefHeight="425.0" prefWidth="512.0">
         <children>
            <!-- Buyer Button with enhanced gradient and hover effect -->
            <Button fx:id="buyerButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onClickBuyerButton" style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #388E3C); -fx-text-fill: #FFFFFF; -fx-font-family: 'Limelight'; -fx-font-weight: bold; -fx-font-size: 24; -fx-padding: 15 30; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.4), 5, 0, 0, 2);" text="Buyer" />
         </children>
      </VBox>
   </children>
</AnchorPane>
