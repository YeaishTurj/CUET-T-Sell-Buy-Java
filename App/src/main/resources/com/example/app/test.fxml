<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom right, #9575CD, #4FC3F7, #66BB6A);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.SellerRegScreenController">
    <children>
        <ImageView fx:id="backBtn" fitHeight="35.0" fitWidth="35.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#backToLogin" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../assets/back.jpg" />
            </image>
        </ImageView>

        <Label fx:id="toast" alignment="CENTER" layoutX="18.0" layoutY="359.0" prefHeight="25.0" prefWidth="576.0" textAlignment="CENTER" style="-fx-font-size: 16; -fx-font-family: 'Serif Bold'; -fx-fill: #FFFFFF;" />

        <!-- Centered Form with Effects and Gradient Styling -->
        <VBox alignment="CENTER" layoutX="185.0" layoutY="30.0" prefHeight="350.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 20;">
            <effect>
                <Glow level="0.3" />
            </effect>
            <children>
                <TextField fx:id="emailAddress" promptText="Enter Email" style="-fx-font-size: 18; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <PasswordField fx:id="password" promptText="Enter Password" style="-fx-font-size: 18; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <TextField fx:id="startUpName" promptText="StartUp Name" style="-fx-font-size: 18; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <TextField fx:id="contactNo" promptText="Contact No" style="-fx-font-size: 18; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <TextField fx:id="wAppNumber" promptText="Whatsapp Number" style="-fx-font-size: 18; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <TextField fx:id="facebookLink" promptText="Facebook Link" style="-fx-font-size: 18; -fx-background-color: linear-gradient(to bottom, #FFFFFF, #E3F2FD); -fx-background-radius: 15; -fx-border-color: #B0BEC5; -fx-border-width: 1; -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0, 0, 0, 0.15), 5, 0, 3, 3);" />

                <Button fx:id="createAc" onAction="#createAccount" text="Create Account" textAlignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #2E7D32); -fx-text-fill: #FFFFFF; -fx-font-family: 'Limelight'; -fx-font-weight: bold; -fx-font-size: 20; -fx-background-radius: 15; -fx-padding: 10 30; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 8, 0, 3, 3);" />
            </children>
        </VBox>
    </children>
</AnchorPane>
