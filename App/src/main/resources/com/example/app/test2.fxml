<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.app.test"
            prefHeight="768.0" prefWidth="1024.0">
    <children>
        <!-- Back Button with Image -->
        <Button fx:id="backButton" layoutX="20.0" layoutY="20.0"
                onAction="#handleBackButtonClick"
                style="-fx-background-color: transparent;
                       -fx-padding: 10;
                       -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 5, 0, 0, 2);">
            <graphic>
                <ImageView fitHeight="24" fitWidth="24">
                    <image>
                        <Image url="@../../../assets/back_button.png"/> <!-- Update this path to your image location -->
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
